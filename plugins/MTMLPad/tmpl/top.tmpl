<mt:setVarBlock name="page_script" append="1">
$( function () {

// Syntax Highlight
var modeLoop = [ 'text', 'mtml', 'mtmloverlay' ];
var currentMode = 1;
var mtml_mode = true;
var codeMirrorOptions = {
  readOnly: true,
  mode: 'mtml',
  lineNumbers: true,
  indentUnit: 0,
  electricChars: false,
  enterMode: 'flat',
  tabMode: 'classic',
  undoDepth: 0,
};

window.editors = [];
$('textarea.snipet').each( function () {
    var textarea = $(this).get(0);
    (function () {
        var editor = CodeMirror.fromTextArea(textarea, codeMirrorOptions );
        window.editors.push(editor);
    })();
});
});

</mt:setVarBlock>

