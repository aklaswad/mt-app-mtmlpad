<mt:include name="header.tmpl" component="MTMLPad">

<div id="content" class="container">
  <div id="about" class="hero-unit"/>
    <mt:blogDescription>
  </div>
  <div class="row">
    <div class="span11">
      <div id="recent-posts" class="entry-list">
        <h2>Recent Posts</h2>
        <mt:include name="list_posts.tmpl" component="MTMLPad" />
      </div>
    </div>
    <div class="span5">
      <div id="news">
        <h2>News</h2>
        <mt:ignore> FIXME: blog_id 3 is a magic number!!!</mt:ignore>
        <mt:entries blog_ids="3">
            <div class="asset">
              <h3 class="asset-header"><mt:entryTitle></h3>
              <div class="news asset-body">
                  <mt:entryBody>
              </div>
            </div>
        </mt:entries>
      </div>
    </div>
  </div>
<mt:include name="footer.tmpl" component="MTMLPad">
</div>



